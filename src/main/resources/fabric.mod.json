{
  "schemaVersion": 1,
  "id": "vanilla_cubed",
  "version": "${version}",

  "name": "Vanilla cubed",
  "description": "A vanilla+ style mod, that improves already existing features of the game and expands them through new mechanics!",
  "authors": [
    "Devoev"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/vanilla-cubed",
    "sources": "https://github.com/Devoev/vanilla-cubed.git"
  },

  "license": "CC0-1.0",
  "icon": "assets/vanilla_cubed/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "net.devoev.vanilla_cubed.VanillaCubed"
      }
    ]
  },
  "mixins": [
    "vanilla_cubed.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "flamingo": "*"
  }
}
